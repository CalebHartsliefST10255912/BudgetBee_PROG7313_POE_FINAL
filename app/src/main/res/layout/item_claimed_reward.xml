<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="@color/bee_yellow">

    <TextView
        android:id="@+id/rewardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reward Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/rewardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reward Description"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/rewardCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost: 100 honeyPoints"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/barcodeImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/fake_barcode"
        android:scaleType="fitCenter" />
</LinearLayout>
