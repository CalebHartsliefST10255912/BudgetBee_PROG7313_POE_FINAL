<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="6dp"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/missionItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/missionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mission Title"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/missionDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mission Description"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/missionPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward: 5 points"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/cooldownText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available in 00h 00m 00s"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/claimButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim"
            android:layout_marginTop="8dp" />




    </LinearLayout>

</androidx.cardview.widget.CardView>
