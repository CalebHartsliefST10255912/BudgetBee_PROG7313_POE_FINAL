<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bee_yellow"
    android:padding="16dp">
    <!--This is the view that will show the user being able to input an expense-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <EditText
            android:id="@+id/inputIncomeName"
            android:hint="Income Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/inputIncomeAmount"
            android:hint="Amount (R)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonAddIncome"
            android:text="Add Income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
